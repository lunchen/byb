
.sjmiaosha{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
}
.sjmiaosha-bg{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  transition: opacity linear 200ms;
}
.sjmiaosha-view{
  padding-bottom:80rpx; 
  width: 96%;
  min-height: 300rpx;
  border-radius: 10rpx;
  background: #fff;
  position: absolute;
  left: 2%;
  transition: bottom linear 100ms;
}
/* 动画 */
.fadeIn{
  opacity: 0
}
.enter-leave{
  top: 20%;
}

