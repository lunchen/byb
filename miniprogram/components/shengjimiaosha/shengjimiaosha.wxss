.sjmiaosha-view-title{
  color: #fe8800;
  font-size: 36rpx;
  padding: 40rpx 30rpx 20rpx;
}
.sjmiaosha-view-title-txt{
  /* border-bottom: 1rpx #fe8800 solid; */
  text-align: center;
}
.sjmiaosha-view-text-list{
  max-height: 60vh;
  overflow-y: auto;
}
.sjmiaosha-view-text{
  margin: 30rpx;
  font-size: 30rpx;
  color: #666666;
  border: 2rpx dashed #ddd;
  border-radius: 20rpx;
  padding-left: 30rpx;
}
.sjmiaosha-view-text-txt0{
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
  padding-right: 30rpx;
}
.sjmiaosha-view-text-txt1{
  line-height: 80rpx;
  border-bottom: 1rpx #f0f0f0 solid;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start
}
.sjmiaosha-view-text-txt2{
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx #f0f0f0 solid;
}
.wd100{
  width: 100%;
}
.sjmiaosha-content-form-item{
  display: flex;
  min-height: 100rpx;
  align-items: center;
  border-bottom: 1rpx #f0f0f0 solid;
  padding: 1rpx 0;
  overflow: hidden;
}
.sjmiaosha-content-form-item-title{
  font-size: 30rpx;
  color: #666666;
  flex: 0 0 auto;
  font-weight: bold;
  margin-right: 30rpx;
  width: 200rpx;
  text-align: right;
}
.sjmiaosha-content-form-item-title.withTitle{
  width: 180rpx;
}
.sjmiaosha-price{
  height:0;
  transition: height linear 200ms;
  overflow: hidden;
}
.sjmiaosha-slideDown{
  height:150rpx;
}
.sjmiaosha-btn{
  width: 200rpx;
  height: 60rpx;
  margin: 30rpx auto;
  background: #ff8800;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  color: #fff;

}
.sjmiaosha-copyBtn{
  font-size: 26rpx;
  position: absolute;
  bottom: 10rpx;
  width: 90%;
  left: 5%;
  word-break: break-all;
}
.sjmiaosha-radio{
  display: flex;
  margin: 10rpx 0;
}