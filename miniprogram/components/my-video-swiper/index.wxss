.container{width:100%;height:100%}.video-swiper{width:100%;height:100%}.video_item{height:100%;width:100%}
.my-video-swiper{
  background: #000;
}
.byb-view{
  position: relative;
  width: 100%;
  height: 100%;
}
.playCover{
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: red;
}
.hideCover{
  position: absolute;
  display: none;
  opacity: 0;
  left: 10000;
  top: 10000;
  width: 0;
  height: 0;
}

.bottom-left-view{
  position: absolute;
  left: 30rpx;
  bottom: 14vh;
  color: #fff;
}
.bottom-right-view{
  position: absolute;
  right: 30rpx;
  bottom: 20vh;
  color: #fff;
  z-index: 100;
}
.bottom-right-view-item{
  font-size: 28rpx;
  line-height: 1;
  margin-bottom: 50rpx;
  text-align: center;
}
.bottom-right-view-item-imgs{
  width:72rpx;
  height: 72rpx;
}
.bottom-left-view-item{
  display: flex;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}
.bottom-left-view-item-text{
  font-size: 30rpx;
  margin-bottom: 40rpx;
}
.item-ellipsis{
  max-width: 520rpx;
  max-height: 74rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow:ellipsis;
}
.bottom-left-view-item-left{
  margin-right: 20rpx;
}
.bottom-left-view-item-right-text1{
  background: rgba(255, 255, 255, .5);
  color: #fe8800;
  font-size: 26rpx;
  display: inline-block;
  padding: 0 10rpx; 
  line-height: 40rpx;
  border-radius: 8rpx;
}
.bottom-left-view-item-right-text1 image{
  display: inline-block;
  vertical-align: middle;
}
.bottom-left-view-item-right-text1 text{
  display: inline-block;
  vertical-align: middle;
}
.bottom-left-btn{
  background: #feb707;
  padding: 14rpx 20rpx;
  border-radius: 8rpx;
  line-height: 1;
  display: inline-block
}
.bottom-left-btn .myImage{
  display: inline-block;
  vertical-align: middle;
}
.bottom-left-btn .myText{
  display: inline-block;
  vertical-align: middle;
  line-height: 1;
}


button.bottom-right-view-item1{
  line-height: 1;
  text-align: center;
  background: transparent;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  color: #fff;
  width: 100rpx;
}
.videoTop button:not([size='mini']) {
  width: 60rpx;
}
.sharePopup{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0;
  height: 100%
}
button.sharePopup-pyBtn{
  text-align: center;
  background: transparent;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  color: #fff;
  width: 100rpx;
  height: 100rpx;
}
.sharePopup-item{
  font-size: 0;
  text-align: center;
  margin: 0 40rpx;
}
.sharePopup-item-text{
  font-size: 24rpx;
  margin-top: 10rpx;
}

.canvasImg{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 110;
}
.canvasImg-bg{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  transition: opacity linear 200ms;
}
.canvasImg-view{
  width: 100%;
  height: 160vw;
  border-radius: 10rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 40rpx 10rpx 0; 
}
.canvasImg-view-top{
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;

}
.canvasImg-exc{
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 110rpx;
  line-height: 110rpx;
  color: #000;
  text-align: center;
  width: 100%;
}
button.huoqutupianquanxian{
  width: 300rpx;
  background: #fff;
  color: #333;
  font-size: 30rpx;
  padding-bottom: 10rpx;
}
button::after {
  border: none;
}

button {
  background-color: transparent;
  padding: 0;
  margin: 0;
  line-height:inherit;
}

button {
  border-radius:0;
}

.my-ani{
  animation: dd linear 0.6s;
}

@keyframes dd{
  0%   {transform:scale(0.6)}
  30%  {transform:scale(1.4)}
  100% {transform:scale(1)}
}