.container{width:100%;height:100%}.video-swiper{width:100%;height:100%}.video_item{height:100%;width:100%}
.my-video-swiper{
  background: #000;
}
.byb-view{
  position: relative;
  width: 100%;
  height: 100%;
}
.playCover{
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: red;
}
.hideCover{
  position: absolute;
  display: none;
  opacity: 0;
  left: 10000;
  top: 10000;
  width: 0;
  height: 0;
}

.bottom-left-view{
  position: absolute;
  left: 30rpx;
  bottom: 14vh;
  color: #fff;
}
.bottom-right-view{
  position: absolute;
  right: 30rpx;
  bottom: 20vh;
  color: #fff;

}
.bottom-right-view-item{
  font-size: 28rpx;
  line-height: 1;
  margin-bottom: 50rpx;
  text-align: center;
}
.bottom-right-view-item-imgs{
  width:72rpx;
  height: 72rpx;
}
.bottom-left-view-item{
  display: flex;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}
.bottom-left-view-item-text{
  font-size: 30rpx;
  margin-bottom: 40rpx;
}
.item-ellipsis{
  max-width: 360rpx;
