/* tabbarBtn.wxss */
.tabbarBtn-box{
  position: relative;
  z-index: 10;
}
.tabbar-service-btnView{
  position: fixed;
  bottom: -1px;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  box-shadow: 0 -1px 4px rgba(0, 0, 0, 0.15);
}
.tabbar-service-btnView-left{
  width: 46.6%;
  height: 120rpx;
  background: #fff;
  font-size: 28rpx;
  color: #999;
  display: flex;
  flex: 0 0 auto;
}
.contact-us{
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column
}
.flex-mc{
  display: flex;
  align-items: center;
  justify-content: center;
}
.tabbar-service-btnView-left-btn{
  flex: 1 0 auto;
}
.tabbar-service-btnView-right{
  width: 53.4%;
  display: flex;
}
.tabbar-service-btnView-right-btn{
  width: 50%;
  height: 68rpx;
  padding: 26rpx 0;
  background: #fe8800;
  text-align: center;
  line-height: 68rpx;
  font-size: 36rpx;
  color: #fff;
}
.lightThemeBGC{
  background: #feb707;
  color: #ffffff;
  font-size: 36rpx;
}

.contactUs{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
.contactUs-bg{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  transition: opacity linear 200ms;
}
.contactUs-view{
  padding-bottom:60rpx; 
  width: 96%;
  min-height: 330rpx;
  border-radius: 10rpx;
  background: #fff;
  position: absolute;
  bottom: -2000rpx;
  left: 2%;
  transition: bottom linear 100ms;
}
/* 动画 */
.fadeIn{
  opacity: 0
}
.enter-leave{
  bottom: 124rpx;
}

.contactUs-view::after{
  content: '';
  position: absolute;
  border: 20rpx transparent solid;
  border-top: 30rpx #ffffff solid;
  bottom: -40rpx; 
  left: 27%;
}
.contactUs-view-title{
  color: #fe8800;
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
}
.contactUs-view-title-txt{
  border-bottom: 1rpx #fe8800 solid;
}
.contactUs-view-text-list{
  max-height: 60vh;
  overflow-y: auto;
}
.contactUs-view-text{
  margin: 30rpx;
  font-size: 30rpx;
  color: #666666;
  border: 2rpx dashed #ddd;
  border-radius: 20rpx;
  padding-left: 30rpx;
}
.contactUs-view-text-txt0{
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
  padding-right: 30rpx;
}
.contactUs-view-text-txt1{
  line-height: 80rpx;
  border-bottom: 1rpx #f0f0f0 solid;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start
}
.contactUs-view-text-txt2{
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx #f0f0f0 solid;
}
