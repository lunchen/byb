.select-box {
  position: relative;
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;
}

.select-current {
  position: relative;
  width: 100%;
  padding: 0 40rpx;
  line-height: 90rpx;
  border: 1rpx solid #fe8800;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.select-current::after {
  position: absolute;
  display: block;
  right: 20rpx;
  top: 50%;
  margin-top: -10rpx;
  content: '';
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-top: 20rpx solid #666666;
}

.current-name {
  display: block;
  width: 85%;
  height: 100%;
  word-wrap: normal;
  overflow: hidden;
}

.option-list {
  position: relative;
  left: 0;
  margin-top: -2rpx;
  /* top: 76rpx; */
  width: 100%;
  padding: 12rpx 30rpx 10rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  z-index: 99;
  border: 1px solid #fe8800;
  border-top: none;
  background-color: #fff;
}

.option {
  display: block;
  width: 100%;
  line-height: 70rpx;
  /* border-bottom: 1rpx solid #eee; */
}

.option:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
