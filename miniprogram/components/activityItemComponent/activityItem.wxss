/* activityItem.wxss */
.navigator-hover{
  color:blue;
}
.activity-view-item{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin: 0rpx 0 40rpx;
}
.activity-view-item-left{
  width: 180rpx;
  height: 240rpx;
  border-radius: 10rpx;
  flex: 0 0 auto;
}
.activity-view-item-right{
  height: 180rpx;
  max-height: 180rpx;
  margin: 12rpx 0;
  padding: 20rpx 30rpx;
  background:#f5f5f5;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* overflow:hidden; */
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.activity-view-text1{
  font-size: 28rpx;
  color: #333;
  font-weight: bolder;
}
.activity-view-text2{
  font-size: 24rpx;
  color: #666;
  margin-top: -10rpx;
  margin-right: 30rpx;
}
.activity-view-item-right-bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.activity-view-item-right-bottom-text{
  height: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.activity-item-visit{
  margin-bottom: 10rpx;
  width: 102rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 6rpx;
  color: #fff;
  background: #feb707;
  font-size: 20rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.activity-view-text3{
  font-size: 22rpx;
  color: #666;
}
.activity-view-btn{
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: #fe8800 1rpx solid;
  border-radius: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fe8800;
}
