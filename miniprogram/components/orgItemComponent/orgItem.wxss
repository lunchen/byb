/* orgItemItem.wxss */
.orgItem-view-item .default-bg{
  background: #f2f2f2;
  width: 100%;
  height: 100%;
}
.orgItem-view-item .default-bg-img{
  width: 120rpx;
  height: 120rpx;
}
.flex-middle-center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.navigator-hover{
  color:blue;
}
.orgItem-view-item{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin: 0rpx 0 20rpx;
}
.orgItem-view-item-left{
  width: 250rpx;
  height: 320rpx;
  border-radius: 26rpx;
  flex: 0 0 auto;
  overflow: hidden;
  border: 4rpx solid #e0e0e0;
  position: relative;
  z-index: 2;
}
.orgItem-view-item-right{
  height: 266rpx;
  flex: 1 1 380rpx;
  background: #f5f5f5;
  border-top-right-radius: 26rpx;
  border-bottom-right-radius: 26rpx;
  padding: 20rpx 25rpx 20rpx 25rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: -6rpx;
  position: relative;
  z-index: 1;
}
.orgItem-view-text1{
  font-size: 28rpx;
  color: #333;
  font-weight: bolder;
  margin-bottom: 10rpx;
}
.orgItem-view-text2{
  height: 40rpx;
  max-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  font-size: 28rpx;
  color: #333;
  line-height: 38rpx;
  text-overflow:ellipsis;
}
.overwhite{
  height: 40rpx;
  max-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.orgItem-view-text3{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.orgItem-view-item-right-bottom{
  display: flex;
  flex-direction: row-reverse;
  padding: 0 20rpx;
}
.orgItem-view-btn{
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: #fe8800 1rpx solid;
  border-radius: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fe8800;
}


.orgItem-content-card-label{
  display: flex;
  margin: 0rpx 0 10rpx;
  overflow: hidden;
}
.orgItem-content-card-label .label-item{
  max-width: 90rpx;
  flex: 0 0 90rpx; 
  margin-right: 20rpx;
  padding: 0 16rpx;
  height: 34rpx;
  border-radius: 17rpx;
  background: #ffeec4;
  line-height: 34rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fe8800;
  overflow: hidden;
  text-overflow: ellipsis;
}
.orgItem-item-visit{
  margin-bottom: -20rpx;
  width: 102rpx;
  height: 30rpx;
  line-height: 28rpx;
  border-radius: 6rpx;
  color: #fff;
  background: #feb707;
  font-size: 20rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
