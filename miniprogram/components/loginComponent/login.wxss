/* login.wxss */
.login{
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  padding: 24% 80rpx 0;
  position: fixed;
}
.login-bg{
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.login_closeBtn{
  position: relative;
  display: flex;
  justify-content: flex-end;
}
/* 登陆 */
.login-view{
  width: 100%;
  height: 500rpx;
  margin-top: 69rpx;
  position: relative;
}
.login-view .login-view-bgImg{
  width: 590rpx;
  height: 500rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.login-view-item{
  width: 590rpx;
  height: 500rpx;
  position: absolute;
  top: 0;
  left: 0;
  padding: 120rpx 0;
  display: flex;
  flex-direction:column;
  align-items: center;
}
.login-view-item-text1{
  font-size: 36rpx;
  color: #333;
  font-weight: bolder;
  margin-bottom: 40rpx;
}
.login-view-item-text2{
  font-size: 30rpx;
  color: #333;
  font-weight: bolder;
  width: 390rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}
.login-view-item-text2 image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.login-view-item-text2.wxLoginBtn{
  color: #fff;
  background: #46af35;
}
.login-view-item-text2.mpLoginBtn{
  color: #666;
  background: #f5f5f5;
  border: 1px #cccccc solid;
}

/* 选票 */
.ticket-container{
  width: 100%;
  margin-top: 69rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff;
  border-top-right-radius: 50rpx; 
  border-top-left-radius: 50rpx; 
  padding: 60rpx 0;
  font-size: 30rpx;
  color: #333;
}
.ticket-container-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 57rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: bolder;
  margin-bottom: 40rpx;
}
.ticket-view{
  padding: 0 30rpx;
}
.ticket-view-label{
  color: #666;
  margin-bottom: 30rpx;
}
.ticket-view-selected{
  height: 90rpx;
  border: 1px solid #feb707;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  justify-content: space-between;
  padding: 0 40rpx 0 50rpx;
  position: relative;
}
.ticket-view-selected_img{
  position: absolute;
  bottom: 0;
  right: 0;
}
.ticket-view-totalPrice{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 60rpx;
}
.ticket-view-totalPrice-left{
  display: flex;
  align-items: center;
}
.ticket-view-totalPrice-left{
  font-size: 32rpx;
  font-weight: bolder;
}

