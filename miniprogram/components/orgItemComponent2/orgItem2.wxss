/* orgItemItem.wxss */
.orgItem2-view-item{
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: center;
  margin: 0rpx 0 20rpx;
  width: 330rpx;
  height: 388rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}
.orgItem2-view-item .default-bg{
  background: #f5f5f5;
}
.orgItem2-view-item .default-bg-img{
  width: 330rpx;
  height: 235rpx;
}
.flex-middle-center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.navigator-hover{
  color:blue;
}
.orgItem2-view-item-left{
  box-sizing: border-box;
  width: 330rpx;
  height: 235rpx;
  border-radius: 10rpx;
  flex: 0 0 auto;
  overflow: hidden;
  border: 1rpx solid #f5f5f5;
  position: relative;
  z-index: 2;
}
.orgItem2-view-item-right{
  box-sizing: border-box;
  width: 330rpx;
  height: 266rpx;
  flex: 1 1 330rpx;
  background: #f5f5f5;
  border-radius: 26rpx;
  padding: 14rpx 25rpx 0rpx 11rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}
.orgItem2-view-text1{
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bolder;
  white-space: nowrap;
  text-align: center;
  min-width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 1;
}
.orgItem2-view-text2{
  height: 40rpx;
  max-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  font-size: 28rpx;
  color: #333;
  line-height: 38rpx;
  text-overflow:ellipsis;
}
.overwhite{
  height: 40rpx;
  max-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.orgItem2-view-text3{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.orgItem2-view-btn{
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: #fe8800 1rpx solid;
  border-radius: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fe8800;
}


.orgItem2-content-card-label{
  height: 34rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  overflow: hidden;
  flex-wrap: wrap;
}
.orgItem2-content-card-label .label-item{
  display: inline-block;
  min-width: 10rpx;
  max-width: 90rpx;
  margin-right: 10rpx;
  margin-bottom: 40rpx;
  padding: 0 12rpx;
  height: 32rpx;
  border-radius: 17rpx;
  background: #ffde8d;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fe8800;
  overflow: hidden;
  text-overflow: ellipsis;
}
.orgItem2-item-visit{
  width: 102rpx;
  height: 30rpx;
  line-height: 28rpx;
  border-radius: 6rpx;
  color: #fff;
  background: #feb707;
  font-size: 20rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.orgItem2-view-item-right-bottom{
  position: absolute;
  right:10rpx;
  bottom:16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
}
.orgItem2-view-item-right-bottom-text{
  font-size: 20rpx;
  color: #6e6e6e;
  margin-right: 20rpx;
}