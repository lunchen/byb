  <block wx:if="{{src!=''}}">
    <image wx:if="{{type==1}}" catchtap="previewImage" bindload="imgLoaded" style="width:{{imageWidth}}rpx;height:{{imageHeight}}rpx" src="{{src}}"></image>
    <video wx:else catchtap="dd" style="height:{{height}}rpx;width:{{width}}rpx;" src="{{src}}" controls></video>
  </block>
</view>