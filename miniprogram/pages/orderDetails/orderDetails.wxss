/* orderDetails.wxss */
.container.orderDetails{
  background: #f5f5f5;
}
.orderDetails-top-view{
  border-top: 1rpx #f0f0f0 solid;
  background: #ffffff;
}
.orderDetails-top-view-item{
  border-bottom: 1rpx #f0f0f0 solid;
  margin-left: 30rpx;
  padding-right: 60rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}
.orderDetails-content-item{
  background: #fff;
  position: relative;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}
.orderDetails-content-item-top{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx;
  font-size: 26rpx;
  color: #fe8800;
  font-weight: bolder;
}
.orderDetails-content-item-top-left{
  display: flex;
  align-items: center;
  color: #999999;
}

.orderDetails-content-item-middle{
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.orderDetails-content-item-middle-left{
  width: 160rpx;
  height: 200rpx;
  border-radius: 10rpx;
  flex: 0 0 auto;
}
.orderDetails-content-item-middle-center{
  width: 440rpx;
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  background:#f5f5f5;
  padding: 0 60rpx 0 30rpx;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
}
.orderDetails-content-item-middle-center-text{
  max-width: 440rpx;
  height: 140rpx;
  max-height: 180rpx;
  padding: 20rpx 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  overflow:hidden;
}
.orderDetails-view-text1{
  font-size: 28rpx;
  color: #333;
  font-weight: bloder;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.orderDetails-view-text2{
  font-size: 24rpx;
  color: #666;
}

.orderDetails-content-ticket{
  width: 590rpx;
  padding: 0 50rpx;
  min-height: 100rpx;
  background: #feb707;
  margin: 24rpx auto 0;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.orderDetails-content-ticket-left{
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 28rpx;
  padding: 24rpx 0 8rpx;
}
.orderDetails-content-ticket-left text{
  margin-bottom: 16rpx;
}
.orderDetails-content-ticket-center{
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  padding: 0 18rpx;
  color: #999999;
  background: #fff;
  font-size: 26rpx;
  margin-left: 120rpx;
}

.orderDetails-content-ticket-cLine{
  width: 1rpx;
  padding: 0 10rpx;
  position: relative;
  align-self:stretch;
  margin: 0 25rpx;
}
.orderDetails-content-ticket-cLine::before{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  content: '';
  background: #fff;
  position: absolute;
  left: 0rpx;
  top: -10rpx;
}
.orderDetails-content-ticket-cLine::after{
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  content: '';
  background: #fff;
  position: absolute;
  left: 0;
  bottom: -10rpx;
}
.orderDetails-content-ticket-cLine-dotted{
  height: 100%;
  width: 1rpx;
  border-right: 1rpx #fff dotted; 
}
.orderDetails-content-ticket-right{
  display: flex;
  color: #ffffff;
  font-size: 28rpx;
  align-items: center;
}
.orderDetails-content-ticket-right image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.orderDetails-content-ticket-right view{
  width: 10rpx;
  line-height: 30rpx; 
}
.orderDetails-bottom-view{
  padding: 15rpx 30rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}
.orderDetails-bottom-view view{
  padding: 15rpx 0;
  display: flex;
  justify-content: space-between;
  line-height: 1;
}
.orderDetails-bottom-view1{
  padding: 15rpx 30rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}
.orderDetails-bottom-view1 .orderDetails-bottom-view1-title{
  color: #000;
  margin-bottom: 20rpx;
}

.orderDetails-bottom-view1 .orderDetails-bottom-view1-imgList{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin: 40rpx 0 20rpx;
}
.orderDetails-bottom-view1-imgList-item{
  width:82rpx;
  height:82rpx;
  position: relative;
  margin-bottom: 6rpx;
  margin-right:14rpx;
}
.first::after{
  content:'团长';
  display: block;
  position: absolute;
  top: -6rpx;
  right: -10rpx;
  font-size: 26rpx;
  height: 20rpx;
  line-height: 1rpx;
  width: 40rpx;
  border-radius: 10rpx;
  background: #fe8800;
  white-space: nowrap;
  padding-left: 10rpx;
}
.orderDetails-bottom-view1 .orderDetails-bottom-view1-img{
  width:80rpx;
  height:80rpx;
  color: #000;
  border-radius: 50%;
  border: 1rpx solid rgb(187, 187, 187);
}
.orderDetails-bottom-view2{
  padding: 30rpx 30rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
  text-align: center;
}
.orderDetails-bottom-view2-text1{
  margin-bottom: 30rpx;
}
.orderDetails-bottom-view2 .txt1{
  color: #fe8800;
}
.orderDetails-bottom-view2-text2{
  margin-bottom: 20rpx;

}
.orderDetails-bottom-view2-text2 .txt2{
  font-size: 38rpx;
  font-weight: bold;
}
.orderDetails-bottom-view2-btn{
  height: 90rpx;
  line-height: 90rpx;
  background: #fe8800;
  border-radius: 10rpx;
  width: 80%;
  margin: 0 auto;
  color: #fff;
}
.orderDetails-bottom-view2-btn.fail{
  background: #ccc;

}