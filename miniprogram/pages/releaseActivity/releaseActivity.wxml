<!--releaseActivity.wxml-->
<view class="container releaseActivity">
  <navbar navbar-data='{{nvabarData}}'></navbar>
     
  <scroll-view scroll-y style="position:relative;height: 100%;">
    <view class="scroll-view-item" style='padding-top:1px'>
      <view style="position:relative;z-index:2;margin-top:{{height+2}}px;border-top:1rpx #f0f0f0 solid">
      </view>
      <view class="releaseActivity-content">
        <view class="releaseActivity-content-addView">
          <view class="releaseActivity-content-addView-btn">
            <image style="width:100%;height:100%" src="../../images/add1@2x.png"></image>
          </view>
          <text>添加活动海报/视频</text>
        </view>
        <view class="releaseActivity-content-form">
          <van-cell-group>
            <view class="releaseActivity-content-form-item">
              <text class="releaseActivity-content-form-item-title">主题</text>
              <van-field
                value="{{ value }}"
                placeholder="活动标题"
                border="{{ false }}"
                bind:change="onChange"
              />
            </view>
            <view class="releaseActivity-content-form-item" >
              <text class="releaseActivity-content-form-item-title">时间</text>
              <van-field
                bindtap="getTime"
                data-timename = "time1"
                value="{{ time1 }}"
                placeholder="请选择时间"
                border="{{ false }}"
                readonly="true"
              />
              <text class="releaseActivity-content-form-item-text">至</text>
              <van-field
              
                bindtap="getTime"
                data-timename = "time2"
                value="{{ time2 }}"
                placeholder="请选择时间"
                border="{{ false }}"
                bind:change="onChange"
                readonly="true"
              />
            </view>
            <view class="releaseActivity-content-form-item item1">
              <text class="releaseActivity-content-form-item-title">地点</text>
              <view class="releaseActivity-content-form-item-right">
                <text>请选择</text>
                <image style="height:24rpx;width:24rpx;margin-top:2rpx;" src="../../images/home_4@2x.png"></image>
              </view>
            </view>
            <view class="releaseActivity-content-form-item item1 item2">
              <text class="releaseActivity-content-form-item-title ">活动详情</text>
              <view class="releaseActivity-content-form-item-right">
                <text>编辑</text>
                <image style="height:24rpx;width:24rpx;margin-top:2rpx;" src="../../images/home_4@2x.png"></image>
              </view>
            </view>

            <view class="releaseActivity-content-form-item">
              <text class="releaseActivity-content-form-item-title ">活动范围</text>
              <view class="releaseActivity-content-form-item-radio">
                <view class="releaseActivity-content-form-item-radio-btn1 {{radio1==0?'active':''}}" data-io="0" bindtap="inOrOut">外部活动</view>
                <view class="releaseActivity-content-form-item-radio-btn1 {{radio1==1?'active':''}}" data-io="1" bindtap="inOrOut">内部活动</view>
              </view>
            </view>
            <view class="releaseActivity-content-form-item ">
              <text class="releaseActivity-content-form-item-title withTitle">设置费用</text>
              <view class="releaseActivity-content-form-item-radio">
                <van-radio-group use-icon-slot value="{{ radio2 }}" bind:change="onRadio2Change" style="width:100%;display:flex;align-items:center">
                  <view style="width:140rpx;font-size:28rpx!important;">
                    <van-radio name="0" icon-size="36rpx" shape="square" checked-color="#feb707">免费</van-radio>
                  </view>
                  <view class="radio2-view" style="font-size:28rpx!important;">
                    <van-radio name="1" icon-size="36rpx" shape="square" checked-color="#feb707"></van-radio>
                    <view style="height:40rpx;width:100rpx;margin:0 20rpx;">
                      <van-field
                        custom-style="padding:0 10rpx;border-bottom:2rpx #666666 solid;"
                        value="{{ radio2Value }}"
                        placeholder=""
                        autosize
                        disabled="{{radio2 == 1?false:true}}"
                        border="{{ false }}"
                        bind:change="onChange"
                      />
                    </view>
                    元
                  </view>
                </van-radio-group>
              </view>
            </view>

             <view class="releaseActivity-content-form-item">
              <text class="releaseActivity-content-form-item-title withTitle">报名名额设置</text>
              <view class="releaseActivity-content-form-item-radio">
                <van-radio-group use-icon-slot value="{{ radio3 }}" bind:change="onRadio3Change" style="width:100%;display:flex;align-items:center">
                  <view style="width:140rpx;font-size:28rpx!important;">
                    <van-radio custom-style="font-size:28rpx;" name="0" icon-size="36rpx" shape="square" checked-color="#feb707">不限额</van-radio>
                  </view>
                  <view class="radio2-view" style="font-size:28rpx!important;">
                    <van-radio name="1" icon-size="36rpx" shape="square" checked-color="#feb707"></van-radio>
                    <view style="height:40rpx;width:100rpx;margin:0 20rpx;">
                      <van-field
                        custom-style="padding:0 10rpx;border-bottom:2rpx #666666 solid;"
                        value="{{ radio3Value }}"
                        placeholder=""
                        autosize
                        disabled="{{radio3 == 1?false:true}}"
                        border="{{ false }}"
                        bind:change="onChange"
                      />
                    </view>
                    人
                  </view>
                </van-radio-group>
              </view>
            </view>
          </van-cell-group>
          
        </view>
        <view class="releaseActivity-content-btnView">
          <view class="releaseActivity-content-btn">
            发布
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
  <van-popup show="{{ show }}" bind:close="onClose" custom-style="height: 40%" position="bottom">
    <van-datetime-picker
      type="datetime"
      value="{{ currentDate }}"
      min-date="{{ minDate }}"
      max-date="{{ maxDate }}"
      bind:confirm = "confirm"
      bind:cancel = "onClose"
    />
  </van-popup>
  
</view>
