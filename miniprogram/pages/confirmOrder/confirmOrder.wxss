/* pages/mine/mine.wxss */
.container.confirmOrder{
  background: #f5f5f5;
}
.confirmOrder-top-view{
  border-top: 1rpx #f0f0f0 solid;
  border-bottom: 20rpx #f5f5f5 solid;
  background: #ffffff;
}
.confirmOrder-top-view-item{
  border-bottom: 1rpx #f0f0f0 solid;
  margin-left: 30rpx;
  padding-right: 60rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}
.confirmOrder-content-item{
  background: #fff;
  position: relative;
}
.confirmOrder-content-item-top{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx;
  font-size: 26rpx;
  color: #fe8800;
  font-weight: bolder;
}
.confirmOrder-content-item-top-left{
  display: flex;
  align-items: center;
  color: #999999;
}

.confirmOrder-content-item-middle{
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.confirmOrder-content-item-middle-left{
  width: 160rpx;
  height: 200rpx;
  border-radius: 10rpx;
  flex: 0 0 auto;
}
.confirmOrder-content-item-middle-center{
  width: 440rpx;
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  background:#f5f5f5;
  padding: 0 60rpx 0 30rpx;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
}
.confirmOrder-content-item-middle-center-text{
  max-width: 440rpx;
  height: 140rpx;
  max-height: 180rpx;
  padding: 20rpx 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  overflow:hidden;
}
.confirmOrder-view-text1{
  font-size: 28rpx;
  color: #333;
  font-weight: bloder;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.confirmOrder-view-text2{
  font-size: 24rpx;
  color: #666;
}
.confirmOrder-view-status{
  height: 60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  color:#fff;
  font-weight:bloder;
  padding: 0 24rpx;
  border-radius: 30rpx;
  background: #b3b3b3;
}
.confirmOrder-view-status.statusIng{
  background: #feb707;
}
.confirmOrder-view-status.statusEnd{
  background: #b3b3b3;
}
.confirmOrder-content-item-bottom-view1{
  height: 75rpx;
  line-height: 77rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0 0;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.confirmOrder-bottom-view{
  height: 110rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  
}
.confirmOrder-bottom-view-item{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx; 
}
.confirmOrder-bottom-view-btn{
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  font-size: 40rpx;
  padding: 0 77rpx;
  background: linear-gradient(to right, rgb(254,183,7) , rgb(254,136,0));
  border-radius: 45rpx;
}