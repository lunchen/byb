.schoolHome-view_item{
  padding: 0 30rpx;
}
.schoolHome-view_item1{
  padding: 0 0 0 30rpx;
}
.schoolHome-content-title{
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  color: #000000;
  font-weight: bolder;
}
.schoolHome-content-title-text{
  display: flex;
  align-items: center;
  font-size: 36rpx;
  color: #000000;
  font-weight: bolder;
}
.schoolHome-content-title-btn{
  font-size: 28rpx;
