/**schoolHome.wxss**/

.schoolHome-content {
  position: relative;
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 0rpx 0rpx 200rpx 0rpx;
}
.schoolHome-infoCard{
  padding: 0 50rpx;
}
.schoolHome-link{
  height: 2rpx;
  background: #f0f0f0;
  margin: 40rpx 0;
}
.schoolHome-view_item{
  padding: 0 30rpx;
}
.schoolHome-view_item1{
  padding: 0 0 0 30rpx;
}
.schoolHome-content-title{
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  color: #000000;
  font-weight: bolder;
}
.schoolHome-content-title-text{
  display: flex;
  align-items: center;
  font-size: 36rpx;
  color: #000000;
  font-weight: bolder;
}
.schoolHome-content-title-btn{
  font-size: 28rpx;
  color: #fe8800;
  border: 1rpx #fe8800 solid;
  line-height: 48rpx;
  padding: 0 17rpx;
}
.schoolHome-scroll-viewX{
  position: relative;
}
.schoolHome-content-course{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-top: 40rpx;
}
.schoolHome-content-course-item{
  display: flex;
  flex-direction: column;
  margin-right: 44rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.schoolHome-content-card{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin: 40rpx 0 0;
}
.schoolHome-content-card-left{
  width: 257rpx;
  height: 350rpx;
  border-radius: 26rpx;
  flex: 0 0 auto;
}
.schoolHome-content-card-right{
  height: 266rpx;
  /* flex: 1 0 auto; */
  background: #f5f5f5;
  border-top-right-radius: 26rpx;
  border-bottom-right-radius: 26rpx;
  padding: 32rpx 25rpx 32rpx 35rpx;
}
.schoolHome-content-card-title{
  font-size: 30rpx;
  color: #333333;
  font-weight: bolder;
}
.schoolHome-content-card-label{
  display: flex;
  margin: 20rpx 0 29rpx;
}
.schoolHome-content-card-label .label-item{
  margin-right: 20rpx;
  padding: 0 16rpx;
  height: 34rpx;
  border-radius: 17rpx;
  background: #ffeec4;
  line-height: 34rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fe8800;
}
.schoolHome-content-card-text{
  max-height: 155rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #666;
  line-height: 38rpx;
  text-overflow:ellipsis;
}

.schoolHome-map{
  margin-top: 40rpx;
}



