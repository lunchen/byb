  padding: 0 17rpx;
}
.schoolHome-scroll-viewX{
  position: relative;
}
.schoolHome-content-course{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-top: 40rpx;
}
.schoolHome-content-course-item{
  display: flex;
  flex-direction: column;
  margin-right: 44rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  flex: 0 0 auto;
  overflow: hidden;
  max-width: 130rpx;
}
.schoolHome-content-course-item-text{
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.schoolHome-content-card{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin: 40rpx 0 0;
}
.schoolHome-content-card-left{
  width: 257rpx;
  height: 350rpx;
  border-radius: 26rpx;
  flex: 0 0 auto;
  overflow: hidden;
  border: 1px #f5f5f5 solid
}
.schoolHome-content-card-right{
  height: 250rpx;
  max-width: 380rpx;
  flex: 0 1 380rpx;
  background: #f5f5f5;
  border-top-right-radius: 26rpx;
  border-bottom-right-radius: 26rpx;
  padding: 32rpx 25rpx 24rpx 35rpx;
  margin-left: -1px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.schoolHome-content-card-title{
  font-size: 30rpx;
  color: #333333;
  font-weight: bolder;
  line-height: 34rpx;
}
.schoolHome-content-card-label{
  max-width: 380rpx;
  overflow: hidden;
  display: flex;
  flex-wrap: nowrap;
  margin: 5rpx 0 5rpx;
}
.schoolHome-content-card-label .label-item{
  flex: 0 0 100rpx;
  margin-right: 20rpx;
  padding: 0 16rpx;
  height: 34rpx;
  border-radius: 17rpx;
  background: #ffeec4;
  line-height: 34rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fe8800;
  max-width: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.schoolHome-content-card-text{
  max-height: 110rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #666;
  line-height: 38rpx;
  text-overflow:ellipsis;
}
.getMore{
  text-align: right;
  font-size: 24rpx;
