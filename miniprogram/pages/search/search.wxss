/**search.wxss**/
.container{
  height: 100%;
}
.search-title{
  margin-left: 30rpx;
  color: #000;
  font-size: 32rpx;
}
.search-theme{
  padding: 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.search-theme-item{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 68rpx;
  line-height: 68rpx;
  background: #f5f5f5;
  border-radius: 34rpx;
  padding: 0 30rpx 0 20rpx;
  margin: 0 20rpx 20rpx 0;
  font-size: 28rpx;
  flex: 0 0 auto;
}
.activity-view{
  padding: 0 30rpx;
}
.loading-bottom-tips{
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  text-align: center
}