/* cash-out.wxss */
.container.cash-out{
  background: #f5f5f5;
  color: #333;
}
.cash-out-top-view-item-left{
  width: 200rpx;
}
.cash-out-top-view{
  border-top: 1rpx #f0f0f0 solid;
  background: #ffffff;
  padding: 10rpx 0;
}
.cash-out-top-view-item{
  height: 92rpx;
  margin-left: 30rpx;
  padding: 10rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}
.inputMes-view-ipt{
  width: 400rpx;
  height: 44rpx;
  border: 1px solid #fe8800;
  border-radius: 10rpx;
  padding: 14rpx 30rpx;
  display: flex;
  align-items: center;
}

.cash-out-middle-view{
  background: #ffffff;
}
.cash-out-middle-view-title{
  padding: 10rpx 30rpx;
}
.cash-out-middle-view-item{
  margin: 0 20rpx;
  border-bottom: 1rpx #f0f0f0 solid;
  padding: 30rpx 0 20rpx;
  display: flex;
  align-items: baseline;
}
.cash-out-middle-view-item .text1{
  width: 40rpx;
  text-align: left;
}
.cash-out-middle-view-item .text2{
  font-size: 60rpx;
  height: 60rpx;
}
.cash-out-middle-view-item .text3{
  width: 80rpx;
  text-align: right;
  font-size: 24rpx;
  color: #fe8800;
}
.cash-out-middle-view-tips{
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  padding: 0 30rpx;
  font-size: 24rpx;
}
.selected{
  color: #fe8800;
}
.selected_hover{
  background: #f0f0f0;
}
.btn_hover{
  background: #f0f0f0;
}
.sub-btn{
  width:300rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 100rpx auto;
  background: #ffffff;
  border: 1rpx #cccccc solid;
  border-radius: 10rpx;
  color: #fe8800;
  font-size: 28rpx;
}

.cLine{
  background: #f5f5f5;
  height: 30rpx;
}
