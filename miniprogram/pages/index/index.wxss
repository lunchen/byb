/**index.wxss**/
page {
  height: 100%;
  overflow: hidden;
  background: #feb707;
}
.content {
  position: relative;
  margin-top: 24%;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 50rpx;
  padding: 20rpx 0rpx 400rpx;
}
.search-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.search-view-location{
  color: #ffffff;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-view-location image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.search-view-btn{
  flex: 1 0 auto;
}
/* 上方横向视频流 */
.course-videoList{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-left: 40rpx;
}
.course-videoList-item{
  flex: 0 0 320rpx;
  height:220rpx;
  width:320rpx;
  border-radius:20rpx;
  overflow:hidden;
  margin-right: 30rpx;
}

.content-view{
  padding: 40rpx 0;
}
.content-title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding:0 40rpx;
}
.content-title-text1{
  font-size: 36rpx;
  color: #000;
  font-family: "PingFang-SC-Bold";
  font-weight: bold;
  display: flex;
  align-items: center;
}
.content-title-right{
  display: flex;
  align-items: center;
}
.content-title-text2{ 
  font-size: 28rpx;
  color: #999;
  font-family: "PingFang-SC-Bold";
  font-weight: bold;
}
.link{
  width: 100%;
  height: 20rpx;
  background: #f0f0f0;
}
/* tab */
.tabs-item{
  padding: 30rpx 30rpx 0;
}
