/**business.wxss**/

.business-content {
  position: relative;
  background: #fff;
  padding: 40rpx 30rpx 200rpx;
}
.business-content-introduction-title{
  color: #fe8800;
  font-size: 36rpx;
}

/* 小三角 */
.business-triangle{
  content: '';
  width: 0px;
  height: 0px;
  border: 20rpx solid transparent;
  border-bottom: 30rpx solid #f5f5f5;
  margin: 5rpx 0 0 60rpx;
}
.business-content-introduction-info{
  background: #f5f5f5;
  border-radius: 26rpx;
  padding: 40rpx 37rpx 30rpx 30rpx;
}
.business-content-introduction-info-title{
  font-size: 30rpx;
  color: #333333;
  font-weight: bolder;
}
.business-content-introduction-info-text{
  margin-top: 24rpx;
  font-size: 26rpx;
  line-height: 44rpx;
  color: #333333;
}
.business-line{
  height: 1px;
  background: #f0f0f0;
  margin: 40rpx 0;
}
.contactInfor{
}
.contactInfo-title{
  color: #fe8800;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  font-weight: bold;
}
.contactInfo-text{
  color: #666666;
  font-size: 30rpx;
  margin-bottom: 16rpx;
}
.contactInfo-text-img{
  display: flex;
  align-items: center;
  color: #666666;
  font-size: 30rpx;
}
.ipt-view{
  display: flex;
  color: #666666;
  font-size: 32rpx;
  align-items: center;
  margin-bottom: 30rpx;
}
.ipt-view-text{
  width: 180rpx;
  text-align: right;
}
.ipt-view-item{
  padding: 10rpx 20rpx;
  border: 2rpx #f0f0f0 solid;
  margin-left: 30rpx;
  border-radius: 10rpx;
}
.sub{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #fe8800;
  color: #fff;
  margin: 50rpx auto 0rpx;
  text-align: center;
  font-size: 38rpx;
}

.editSchoolDetails-textarea{
  position: relative;
  z-index: 1;
  border-bottom: 1rpx #f0f0f0 solid;
  padding-bottom: 50rpx;
}
.editSchoolDetails-textarea::after{
  content: "限200字以内";
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  font-size: 30rpx;
  color: #cccccc;
}
.editSchoolDetails-textarea textarea{
  height: 140rpx;
  font-size: 30rpx;
}